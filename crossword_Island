            :root {
                --cell-size: 30px;
            }
             body {
                padding: 0.5rem;
            }
        }
         @media (max-width: 480px) {
            :root {
                --cell-size: 24px;
            }
            .cell input {
                 font-size: 1rem;
            }
             .number {
                font-size: 0.6rem;
            }
        }

